<h1><%= action_name.capitalize %> Meal Plan</h1>
<%= form_with(model: @meal_plan) do |form| %>
  <% if @meal_plan.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@meal_plan.errors.count, "error") %> prohibited this meal plan from being saved:</h2>
      <ul>
        <% @meal_plan.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :date %>
    <%= form.date_select :date %>
  </div>
  <div>
    <%= form.label :meals %>
    <%= form.collection_check_boxes :meal_ids, Meal.all, :id, :name do |b| %>
      <div>
        <%= b.check_box %>
        <%= b.label %>
      </div>
    <% end %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
<%= link_to 'Back', meal_plans_path %>
